<h3 class="ui header">{{t "forms.i-i-s-otel-отели-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименования
      class=(if (v-get validationModel "наименования" "isInvalid") "error")
      label=(t "forms.i-i-s-otel-отели-e.наименования-caption")
      data-test-i-i-s-otel-отели-e-наименования=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименования" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.адрес
      class=(if (v-get validationModel "адрес" "isInvalid") "error")
      label=(t "forms.i-i-s-otel-отели-e.адрес-caption")
      data-test-i-i-s-otel-отели-e-адрес=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "адрес" "message")}}
  </div>
  <div class="field" data-test-i-i-s-otel-отели-e-звезды="true">
    <label>{{t "forms.i-i-s-otel-отели-e.звезды-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-otel-звезда")
      value=model.звезды
      class=(if (v-get validationModel "звезды" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "звезды" "message")}}
  </div>
</form>
